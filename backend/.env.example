# Core Infrastructure Environment Variables
# Add these to your .env file for complete functionality

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# Option 1: SMTP Configuration (Generic)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="AI Dispute Resolver <noreply@ai-dispute-resolver.com>"

# Option 2: SendGrid (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: Resend (Alternative)
# RESEND_API_KEY=your-resend-api-key

# =============================================================================
# SMS SERVICE CONFIGURATION (Twilio)
# =============================================================================

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# FRONTEND URL (for notifications and links)
# =============================================================================

FRONTEND_URL=http://localhost:3001
FRONTEND_ORIGIN=http://localhost:3001

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================

# Socket.IO will use FRONTEND_ORIGIN for CORS
# No additional configuration needed - already handled in index.js

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase (already configured in your existing .env)
# SUPABASE_URL=your-supabase-url
# SUPABASE_ANON_KEY=your-supabase-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT_SECRET=your-jwt-secret
# JWT_EXPIRES_IN=7d

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================

NODE_ENV=development
PORT=8080

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================

# Set to true to enable detailed logging
DEBUG_MODE=true

# Set to true to enable email/SMS in test mode (console output only)
TEST_MODE=false